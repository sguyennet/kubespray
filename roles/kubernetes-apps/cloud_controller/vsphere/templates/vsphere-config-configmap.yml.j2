kind: ConfigMap 
apiVersion: v1 
metadata:
  name: cloud-config
  namespace: kube-system
data:
  vsphere.conf: |
    [Global]
    port = "{{ vsphere_vcenter_port }}"
    insecure-flag = "{{ vsphere_insecure }}"
    secret-name = "cpi-global-secret"
    secret-namespace = "kube-system"

    [VirtualCenter "{{ vsphere_vcenter_ip }}"]
    datacenters = "{{ vsphere_datacenter }}"